@page "/mypage"
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@inject ProtectedSessionStorage SessionStorage
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject ILogger<MyPage> Logger

<h1>Welcome to MyPage!</h1>

<h2>Your shopping lists:</h2>

@if (!string.IsNullOrEmpty(ShoppingListName))
{
    <div>
        <strong>Shopping List Name from Session:</strong> @ShoppingListName
    </div>
}
else
{
    <p>No shopping list found.</p>
}

@* <button class="btnNewShoppingList" @onclick="NavigateToCreate">Create New Shopping List</button> *@
<a href="/CreateNewShoppingList" class="btnNewShoppingList">Go to Create New Shopping List</a>

@code {
    private string ShoppingListName { get; set; } = "";

    private void NavigateToCreate()
    {
        Navigation.NavigateTo("/CreateNewShoppingList");
        // Navigation.NavigateTo("https://localhost:7259/CreateNewShoppingList");
    }

}


    <style>

    .btn {
        padding: 8px 12px;
        border-radius: 5px;
        cursor: pointer;
        border: none;
    }

    .btnNewShoppingList {
        padding: 10px 20px; /* Justera storleken på knappen */
        border-radius: 10px; /* Rundade hörn (justera värdet för mer eller mindre rundning) */
        border: 1px solid #007bff; /* Kantlinje */
        background-color: #007bff; 
        color: white; 
        font-size: 16px; 
        cursor: pointer; /* Gör så att muspekaren blir en hand */
        transition: background-color 0.3s; /* För smidig övergång vid hovring */
        text-decoration: none; /* Tar bort understrykning */
    }

    .btnNewShoppingList:hover {
            background-color: #0056b3; 
    }


    </style>